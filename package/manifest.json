{
  "manifest_version": 2,
  "name": "Pixiv Tag Suggest",
  "version": "3.3",
  "description": "pixivでブックマークするときに自分のタグが，作品のタグやブックマークされているタグに似ていたら推薦する．全く同一の場合は自動選択",
  "options_page": "options.html",
  "background": {
    "scripts": ["ibm_model1.js", "background.js"]
  },
  "icons": 
  {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "jquery-1.7.2.min.js",
        "pixiv-tag-suggest.user.js"
      ],
      "matches": [
        "http://www.pixiv.net/*bookmark_add.php?*"
      ]
    }
  ]
}